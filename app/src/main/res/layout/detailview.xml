<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="55dp"
        android:id="@+id/movieTitleView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="Movie Title"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="55dp"
        android:id="@+id/movieReleaseDateView"
        android:gravity="center_vertical|center_horizontal"
        android:text="Release Date"
        android:layout_below="@+id/movieTitleView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="55dp"
        android:id="@+id/movieUserRating"
        android:gravity="center_vertical|center_horizontal"
        android:text="User Rating"
        android:layout_below="@+id/movieReleaseDateView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieDescriptionView"
        android:gravity="center_vertical|center_horizontal"
        android:text="Movie Description"
        android:capitalize="sentences"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:scrollHorizontally="true"/>

</RelativeLayout>
