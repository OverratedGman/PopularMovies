<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.gautham.popularmovies.MovieDetailFragment">>

<ImageView
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:id="@+id/imageView" />

<TextView
    android:layout_width="20dp"
    android:layout_height="55dp"
    android:id="@+id/movieTitleView"
    android:layout_toRightOf="@+id/imageView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:gravity="center_vertical|center_horizontal"
    android:text="Movie Title"
    android:layout_toEndOf="@id/imageView"
    android:layout_marginTop="35dp"
    />

<TextView
    android:layout_width="20dp"
    android:layout_height="55dp"
    android:id="@+id/movieReleaseDateView"
    android:gravity="center_vertical|center_horizontal"
    android:text="Release Date"
    android:layout_below="@+id/movieTitleView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@id/imageView"
    android:layout_marginTop="25dp" />

<TextView
    android:layout_width="20dp"
    android:layout_height="55dp"
    android:id="@+id/movieUserRating"
    android:gravity="center_vertical|center_horizontal"
    android:text="User Rating"
    android:layout_below="@+id/movieReleaseDateView"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@id/imageView"
    android:layout_marginTop="25dp" />

<TextView
    android:layout_width="280dp"
    android:layout_height="120dp"
    android:id="@+id/movieDescriptionView"
    android:gravity="center_vertical|center_horizontal"
    android:text="Movie Description"
    android:layout_below="@+id/imageView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="40dp"
    android:capitalize="sentences" />

</RelativeLayout>
